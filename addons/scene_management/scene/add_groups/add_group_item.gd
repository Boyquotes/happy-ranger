@tool
extends HBoxContainer


signal removed


#============================================================
#  SetGet
#============================================================
func set_label(text: String):
	if not self.is_inside_tree(): await ready
	%Label.text = text

func get_label() -> String:
	return %Label.text


#============================================================
#  自定义
#============================================================
func remove():
	self.removed.emit()
	self.queue_free()


#============================================================
#  连接信号
#============================================================
func _on_remove_pressed():
	remove()
